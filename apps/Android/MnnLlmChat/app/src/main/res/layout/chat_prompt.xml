<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/mainBlue"
              android:orientation="vertical">
    <EditText android:layout_width="300dp"
              android:layout_height="wrap_content"
              android:id="@+id/chat_prompt"
              android:background="@color/color_white"
              android:lines="10"
              android:layout_margin="3dp"
              android:gravity="top"
              android:textSize="14dp"
              tools:ignore="Suspicious0dp"></EditText>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal" android:orientation="horizontal"
                  android:gravity="center">
        <Button android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/chat_prompt_cancel"
                android:text="取消"></Button>
        <Button android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:id="@+id/chat_prompt_sure"
                android:text="确认"></Button>
    </LinearLayout>
</LinearLayout>